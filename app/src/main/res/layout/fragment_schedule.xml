<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- HEADER -->
    <View
        android:id="@+id/headerSchedule"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_header_dashboard"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="Jadwal Kuliah"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TOMBOL TAMBAH (PUTIH KECIL) -->
    <LinearLayout
        android:id="@+id/btnAddSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_white_pill"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/tvPageTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPageTitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Tambah"
            android:textColor="#2979FF"
            android:textStyle="bold"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- TAB HARI SCROLLABLE -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:scrollbars="none"
        android:paddingStart="24dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvPageTitle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Hari Aktif (Background Putih) -->
            <TextView
                android:id="@+id/tabSenin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_pill"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="Senin"
                android:textColor="#2979FF"
                android:textStyle="bold" />

            <!-- Hari Pasif (Transparan) -->
            <TextView
                android:id="@+id/tabSelasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Selasa"
                android:textColor="#CCFFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabRabu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Rabu"
                android:textColor="#CCFFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabKamis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Kamis"
                android:textColor="#CCFFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabJumat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Jumat"
                android:textColor="#CCFFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabSabtu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Sabtu"
                android:textColor="#CCFFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabMinggu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="24dp"
                android:text="Minggu"
                android:textColor="#CCFFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- KARTU JADWAL -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/headerSchedule">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvEmptySchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Tidak ada jadwal kuliah"
                android:textColor="#9E9E9E"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/containerSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>