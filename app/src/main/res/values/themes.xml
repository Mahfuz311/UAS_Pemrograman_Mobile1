<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.SmartReminder" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- JANGAN PAKAI FULLSCREEN (ini yang bikin masalah padding putih kadang muncul) -->
        <item name="android:windowFullscreen">false</item>

        <!-- WARNA STATUS BAR: BIRU -->
        <item name="android:statusBarColor">#2979FF</item>

        <!-- MATIKAN IKON HITAM (Agar ikon jadi putih di background biru) -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.SmartReminder" parent="Base.Theme.SmartReminder" />

    <!-- Tema Splash Screen (Hanya ini yang boleh fullscreen) -->
    <style name="Theme.SmartReminder.Splash" parent="Theme.SmartReminder">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.SmartReminder.BlueStatusBar" parent="Theme.SmartReminder">
        <item name="android:statusBarColor">#2979FF</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>